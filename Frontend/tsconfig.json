{
  "compilerOptions": {
	"types": ["vite/client", "node", "jest"],
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["node_modules/@types", "src/declarations"],
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@pages/*": ["Pages/*"],
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@hooks/*": ["hooks/*"],
	  "@api/*": ["api/*"],
	  "@types/*": ["types/*"],
	  "@mocks/*": ["__mocks__/*"],
	  "@context/*": ["context/*"],	  
	  "@routes/*": ["routes/*"],		  
	  "@styles/*": ["styles/*"],	
	  "@schemas/*": ["schemas/*"],	  
    }
  },
  "include": ["src/**/*"]
}

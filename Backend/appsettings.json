{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/app-log.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "YourApplicationName"
    }
  },
  "LoggingSettings": {
    "MaskSensitiveData": true
  },
  "AppSettings": {
    "BaseUrl": "https://ebudget.se"
  },
  "Smtp": {
    "Host": "mail.ebudget.se",
    "Port": 587,
    "UsernameNoReply": "no-reply@ebudget.se",
    "UsernameInfoUser": "info@ebudget.se"
  },
  "ResendEmailSettings": {
    "CooldownPeriodMinutes": 15,
    "DailyLimit": 3
  },
  "VerificationToken": {
    "TtlHours": 24
  },
  "AuthLockout": {
    "WindowMinutes": 15,
    "MaxAttempts": 5,
    "LockoutMinutes": 15
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "eBudget:"
  },
  "WebSocket": {
    "Secret": "__ENV__"
  },
  "AllowedHosts": "*"
}
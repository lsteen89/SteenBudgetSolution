{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/app-log.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "eBudget"
    }
  },
  "Environment": "Production",
  "AppSettings": {
    "BaseUrl": "https://ebudget.se"
  },
  "Jwt": {
    "Issuer": "eBudget",
    "Audience": "eBudget",
    "ExpiryMinutes": 15,
    "ActiveKid": "2025-09-11",
    "Keys": {
      "2025-09-11": "__ENV__:JWT_KEYS__2025_09_11",
      "2025-12-01": "__ENV__:JWT_KEYS__2025_12_01"
    },
    "RefreshTokenExpiryDays": 30,
    "RefreshTokenExpiryDaysAbsolute": 90
  },
  "Smtp": {
    "Host": "mail.ebudget.se",
    "Port": 587,
    "UsernameNoReply": "no-reply@ebudget.se",
    "UsernameInfoUser": "info@mail.ebudget.se"
  },
  "ResendEmailSettings": {
    "CooldownPeriodMinutes": 15,
    "DailyLimit": 3
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "eBudget:"
  },
  "AllowedHosts": "*"
}
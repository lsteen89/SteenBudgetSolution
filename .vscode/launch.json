{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // IMPORTANT: Ensure this path is correct for your project
            "program": "${workspaceFolder}/Backend/bin/Debug/net8.0/Backend.dll",
            "args": [
                // THIS is the URL your backend will run on when you press F5
                "--urls",
                "http://localhost:5001"
            ],
            // IMPORTANT: Ensure this path is correct for your project folder
            "cwd": "${workspaceFolder}/Backend",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "DOTNET_USE_POLLING_FILE_WATCHER": "true"
            }
        }
    ]
}